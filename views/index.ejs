<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title></title>
</head>
<body>
  <h1><%= title %></h1>
  <ul>
    <% messages.map((message, idx) => { %>
      <li data-idx="<%= idx %>">
        <%= `${message.user}: ${message.text}` %>
        <form action="/message/<%= idx %>" method="GET">
          <button type="submit">Open</button>
        </form>
      </li>
    <% }); %>
  </ul>
  <form action="/new" method="GET">
    <button type="submit">Create new message</button>
  </form>
</body>
</html>
